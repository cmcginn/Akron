        @section scripts{
            <script src="~/Content/vendor/amcharts/amcharts.js"></script>
            <script src="~/Content/vendor/amcharts/serial.js"></script>
            <script src="~/Content/vendor/amcharts/themes/light.js"></script>

            
            <script>
                var data = null;
                var categoryDim = null;
                var categoryGroup = null;
                var groups = [];
                var ndx = null;
                var allDims = [];
                var cData = null;
                var gData = [];
                var graphs = [];
                var categories = [];
                d3.json(root + 'api/Incumbent/', function(r) {

                    data = r;

                    cData = d3.nest()
                        .key(function(d) { return d[0]._value[0]._value; })
                        .key(function(d) { return d[0]._value[1]._value; })
                        .rollup(function(d) {
                            return Math.floor(d[0][1]._value);
                        })
                        .entries(data);


                    for (var i = 0; i < cData.length; i++) {
                        var item = cData[i];
                        var itemVal = { category: +item.key };

                        for (var j = 0; j < item.values.length; j++) {
                            var val = item.values[j];
                            if (categories.indexOf(val.key) < 0)
                                categories.push(val.key);
                            itemVal[val.key] = val.values;

                        }


                        gData.push(itemVal);
                    }

                    for (var i = 0; i < categories.length; i++) {
                        var graph = {
                            balloonText: "[[title]] - [[category]] $[[value]]",
                            bullet: 'round',
                            id: i,
                            title: categories[i],
                            valueField: categories[i]
                        };
                        graphs.push(graph);
                    }

                    doChart();

//forEach(mainGroup.all(), function(d) {
                    //    allDims.push({})
                    //});
                    //doChart();
                });
                $(function() {
                    //var l = Ladda.create(document.querySelector('.ladda-button'));
                    //l.toggle();

                });

                function doChart() {
                    var chartData = null;
                    AmCharts.makeChart("chartdiv",
                        {
                            "type": "serial",
                            "categoryField": "category",
                            "startDuration": 1,
                            "categoryAxis": {
                                "gridPosition": "start"
                            },
                            "trendLines": [],
                            "graphs": graphs,
                            "guides": [],
                            "valueAxes": [
                                {
                                    "id": "ValueAxis-1",
                                    "title": "Axis title"
                                }
                            ],
                            "allLabels": [],
                            "balloon": {},
                            "legend": {
                                "useGraphSettings": true
                            },
                            "titles": [
                                {
                                    "id": "Title-1",
                                    "size": 15,
                                    "text": "Chart Title"
                                }
                            ],
                            "dataProvider": gData
                        }
                    );

                }


                // generate some random data, quite different range
                function generateChartData() {
                    var chartData = [];
                    var firstDate = new Date();
                    firstDate.setDate(firstDate.getDate() - 5);

                    for (var i = 0; i < 1000; i++) {
                        // we create date objects here. In your data, you can have date strings
                        // and then set format of your dates using chart.dataDateFormat property,
                        // however when possible, use date objects, as this will speed up chart rendering.
                        var newDate = new Date(firstDate);
                        newDate.setDate(newDate.getDate() + i);

                        var visits = Math.round(Math.random() * (40 + i / 5)) + 20 + i;

                        chartData.push({
                            date: newDate,
                            visits: visits
                        });
                    }
                    return chartData;
                }

            </script>
        }
        