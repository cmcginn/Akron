
@{
    ViewBag.Title = "DC";
}

<style>
    #bubbleChartWrap .axis.x {
        display: none;
    }

    #totalsTable td {
        padding: 0px;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Dashboard</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<a href="#" class="btn btn-primary ladda-button" data-style="expand-left"><span class="ladda-label">expand-left</span></a>
<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-database fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div id="recordCount" class="medium"></div>
                        <div>Total Records</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-cubes fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="medium" id="dimCount"></div>
                        <div id="dimLabel"></div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-calendar fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="medium" id="yearCount"></div>
                        <div>Years</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-red">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-dollar fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="medium" id="averageBasePay"></div>
                        <div>Average Base Pay</div>
                    </div>
                </div>
            </div>
            <a href="#">
                <div class="panel-footer">
                    <span class="pull-left">View Details</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-8 col-md-12 ">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-line-chart fa-fw"></i> Average Base Pay
                <div class="pull-right">
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary btn-xs dropdown-toggle ladda-button" data-action="actions" data-style="zoom-out" data-toggle="dropdown" aria-expanded="false">
                            Actions
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu pull-right" role="menu">
                            <li>
                                <a class="dimensionSelect" href="javascript:void(0)" data-dimension="OrgType">By Organization</a>
                            </li>
                            <li>
                                <a class="dimensionSelect" href="javascript:void(0)" data-dimension="JobFamily">By Job Family</a>
                            </li>
                            <li>
                                <a class="dimensionSelect" href="javascript:void(0)" data-dimension="GeoGroup">By Geo Group</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div id="chart" class="col-sm-12 text-center"></div>
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <div class="col-lg-4 col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-bar-chart fa-fw"></i>Total Average Base Pay
            </div>
            <div class="panel-body">
                <div id="barChart" class="col-sm-12 text-center"></div>
                <div class="col-sm-12 text-center">
                    <table id="totalsTable" class="table table-striped">
                        <thead>
                            <tr>
                                <th>Year</th>
                                <th>Average</th>
                            </tr>

                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12" id="bubbleChartWrap">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-group fa-fw"></i>Percentage of Total Respondents
            </div>
            <div class="panel-body">
                <div id="bubbleChart" class="col-sm-12 text-center">

                </div>
            </div>
        </div>

    </div>
</div>
@section scripts{
    <script type="text/javascript" src="//dc-js.github.io/dc.js/js/colorbrewer.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/dc/2.0.0-beta.12/dc.min.js"></script>
    <script src="@Url.Content("~/Scripts/app/data.js")"></script>

    <script>
                $(function() {
                    var l = Ladda.create(document.querySelector('.ladda-button'));
                    l.toggle();
                })

    </script>
}




